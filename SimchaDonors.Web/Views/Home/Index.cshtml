@using SimchaDonors.Data;
@using SimchaDonors.Web.Models;
@model SimchaViewModel


<div class="header">

    <h2>Simchas</h2>

</div>
<div class="col-md-offset-3">
    <a id="newsimcha" class="btn btn-primary" href="/home/NewSimcha">New Simcha</a>
</div>

    <div class="container">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Contributions</th>
                <th>Simcha Name</th>
                <th>Contributor Count</th>
                <th>Total</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>

            @foreach (Simcha s in Model.simchas)
                {
                <tr>
                    <td>
                        <a href="/home/contributions?simchaid=@s.Id" class="btn btn-success">Contributions</a>
                    </td>
                    <td>@s.Name</td>
                    @if(Model.ContributorCount==0)
                    {
                    <td>0</td>
                    }
                    else
                    {
                    <td>@s.Count/@Model.ContributorCount</td>

                    }
                    <td>@s.Balance.ToString("c")</td>
                    <td>@s.Date.ToShortDateString();</td>
                    <td>
                        <button class="btn btn-warning">Email Organizer</button>
                    </td>
                </tr>
            }

        </table>

    </div>

