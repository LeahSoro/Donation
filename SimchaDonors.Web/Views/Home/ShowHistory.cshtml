@using SimchaDonors.Data;
@using SimchaDonors.Web.Models;
@model HistoryViewModel

<h1>History for @Model.contributor.LastName</h1>
<h3>Current Balance:@Model.contributor.Balance.ToString("C")</h3>
<div class="container">
    <table class="table table-bordered table-striped">
        <tr>
            <th>Action</th>
            <th>Date</th>
            <th>Amount</th>

        </tr>
        <tr>
            @foreach (Contribution c in Model.contributions)
            {
                <td>
                    @if(c.Amount>=1)
                    {
                   <span>Deposit</span> 
                    }
                    else
                    {
                    <span>Contribution to the Simcha</span> 
                    }
                </td>
                <td>@c.Date.ToShortDateString()</td>
                <td>@c.Amount.ToString("C")</td>
            }
           

        </tr>
    </table>
</div>
